@model UserClaimsViewModel

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Claims</h2>
        </div>
        <div class="card-body">
            @for(int i=0; i< Model.Cliams.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Cliams[i].ClaimType" />
                    <input type="checkbox" asp-for="@Model.Cliams[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Cliams[i].IsSelected" class="form-check-label">
                        @Model.Cliams[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto;" />
            <a asp-action="EditUser" asp-controller="Administration"  asp-route-id="@Model.UserId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>